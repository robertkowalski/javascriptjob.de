extends ../layout

block content
  h2(class='fixedwidth center') Neues Jobangebot erstellen

  form(class='fixedwidth center', method='post', action='/jobs')
    input(class='span9', type='text', name='jobtitle', placeholder='Jobtitel', value=job.jobtitle)
    br
    input(class='span9', type='text', name='company', placeholder='Firma', value=job.company)
    br
    input(class='span9', type='text', name='website', placeholder='Website', value=job.website)
    br
    input(class='span9', type='text', name='location', placeholder='Ort', value=job.location)
    br
    textarea(class='span9', rows='15', name='description', placeholder='Beschreibung (einfaches HTML erlaubt)')!=job.description
    br
    textarea(class='span9', rows='5', name='howtoapply', placeholder='Wie bewerben')!=job.howtoapply
    br
    input(type='hidden', name='_csrf', value=token)
    button(class='btn', type='submit') Submit