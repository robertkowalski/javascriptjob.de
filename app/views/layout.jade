doctype 5
html
  head
    block head
      title JavaScript Jobs - JavaScript Job Board
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
      link(href='/stylesheets/style.css', rel='stylesheet')
  body
    div#wrapper
      div#logo
        h1
          a(href='/') JavaScript Jobs
      div#site.container
        div#content
          if (flash.error != undefined)
            div(id='messages')
              ul.error
                each error in flash.error
                  li= i18n.t(error)
          block content

      div#footer.container
        block foot
          include includes/footer_normal