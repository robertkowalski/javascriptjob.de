doctype 5
html
  head
    block head
      title JavaScript Jobs - JavaScript Job Board
      link(href='/style/stylesheets.css', rel='stylesheet')
      link(href='http://fonts.googleapis.com/css?family=Sintony:700', rel='stylesheet', type='text/css')

  body
    div#wrapper
      div#logo
        h1
          a(href='/') JavaScript Jobs
      div#site.container
        div#content
          if (typeof flash != 'undefined')
            if (typeof flash.error != 'undefined')
              div(id='messages')
                ul.error
                  each error in flash.error
                    li= i18n.t(error)
          block content

      div#footer.container
        block foot
          include includes/footer_normal

    script
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-38550005-1']);
      _gaq.push(['_gat._anonymizeIp']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();